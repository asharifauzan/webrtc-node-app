<%- include('partials/header') %>

<div class="container-fluid px-5 py-24">
  <h1 class="mb-24 text-5xl font-bold text-center">
    Login
  </h1> 
  <div class="container px-3 py-9 mx-auto w-3/12">
    <% if (typeof message != "undefined") { %>
      <p class="bg-red-600 text-center"><%= message %></p>
     <% } %>
    <form action="./login" method="post">
      <div class="p-10 card bg-base-200">
        <div class="form-control">
          <label class="label">
            <span class="label-text">Username</span>
          </label> 
          <input type="text" class="input" name="username">
        </div>
        <div class="form-control">
          <label class="label">
            <span class="label-text">Password</span>
          </label> 
          <input type="password" class="input" name="password">
        </div>
        <div class="form-control mt-3">
          <button class="btn btn-primary" type="submit">
            Login
          </button>
          <a href="./register" class="link link-primary">Create an Account</a>
        </div>
      </div>
    </form>
  </div>
</div>

<%- include('partials/footer') %>