<%- include('partials/header') %>

<div class="container-fluid px-5 py-24">
  <h1 class="mb-24 text-5xl font-bold text-center">
    Welcome to Dashboard, Click Here to <a href="/logout" class="btn btn-secondary">Logout</a>
  </h1> 
  <div class="container px-3 py-9 mx-auto w-3/12">
    <form action="/room" method="post">
      <div class="p-10 card bg-base-200">
        <div class="form-control">
          <label class="label">
            <span class="label-text">Room Name</span>
          </label> 
          <input type="text" class="input" name="room">
        </div>
        <div class="form-control mt-3">
          <button class="btn btn-primary" type="submit">
            Create Room
          </button>
        </div>
      </div>
    </form>
  </div>
  <div class="overflow-x-auto">
    <table class="table w-full">
      <thead>
        <tr>
          <th>ID</th> 
          <th>Name</th> 
          <th></th>
        </tr>
      </thead> 
      <tbody>
        <% if (!rooms) { %>
         <span>Data Kosong</span>
        <% } else { %>
          <% rooms.map(room=> { %>
            <tr>
              <td>
                <%= room.id %> 
              </td> 
              <td>
                <%= room.room_name %> 
              </td> 
              <th>
                <a href="/<%= room.room_name %>" class="btn btn-danger btn-xs">Start</a>
              </th>
            </tr>
    
          <% }) %> 
        <% } %> 
      </tbody> 
      <tfoot>
        <tr>
          <th>ID</th> 
          <th>Name</th> 
          <th></th>
        </tr>
      </tfoot>
    </table>
  </div>
</div>


<%- include('partials/footer') %>